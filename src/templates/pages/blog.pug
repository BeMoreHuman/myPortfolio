extends ../template

block title
	title Мой блог!

block content
	section.section.blog-header
		.filter
		+social('social-top', ['vk', 'github', 'in'])
		.hero__title
			.user
				.user-header
					.user-header__image
						img.user-header__avatar(src="./assets/images/me.jpg", alt="my_photo")
					h1.block-title.block-title--blog Блог
						svg(width="100" height="100" class="section-title__pic--blog_header")
							use(xlink:href="./assets/images/sprite.svg#blog_header")
					.user-header__text.user-header__text--blog
						p Статьи, которые я написал
		.hamburger.hero__menu
	section.section.blog
		.triangle
			svg(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 1000 85" preserveaspectratio="none" class="traingle__svg traingle__svg--white")
				polygon(points="0,0   0,86   500.8,86   500.8,75.5")
				polygon(points="1000,0   1000,86   500,86   500,75.5")
		.blog-menu__wrap
			nav.blog-menu
				ul.blog-menu__list
					li.blog-menu__item.blog-menu__itemActive
						a.blog-menu__link Самое важное в SASS
					li.blog-menu__item
						a.blog-menu__link Приёмы в вёрстке, без которых не обходится ни один сайт
					li.blog-menu__item
						a.blog-menu__link Самый необходимый набор Gulp плагинов
					li.blog-menu__item
						a.blog-menu__link Почему я выбрал Jade
